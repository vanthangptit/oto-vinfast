<div class="form-detail js-form-detail">
  <div class="form-detail-sticker">
    <div class="container">
      <div class="row">
        <div class="form-detail__header">
          <div class="form-detail__hotline">
            <a class="form-detail__hotline-number" href="tel:0984619295" title="Gọi ngay">
              <i class="fa fa-phone"></i>
              <span>0984.619.295</span>
            </a>
            <span class="form-detail__hotline-desc">Hãy liên hệ ngay để được mua xe với giá tốt nhất!</span>
          </div>
          <p class="form-detail__title">NHẬN BÁO GIÁ XE</p>
        </div>
        <form>
          <div class="mb-3">
            <input name="name" type="text" class="form-control" placeholder="Họ tên (Bắt buộc)">
          </div>
          <div class="mb-3">
            <input name="phone" type="text" class="form-control" placeholder="Điện thoại (Bắt buộc)">
          </div>
          <div class="mb-3">
            <input type="email" class="form-control" placeholder="Email...">
          </div>
          <div class="mb-3">
            <select class="form-select custom-select">
              <% for(var i = 0; i < data.cities.length; i++) { %>
              <option  <% if(data.cities[i].value === -1) { %>selected<% }%> value="<%= data.cities[i].value %>"><%= data.cities[i].name %></option>
              <% } %>
            </select>
          </div>
          <div class="mb-3">
            <input name="car_type" type="text" class="form-control">
          </div>
          <div class="flex gap-25 mb-3">
            <div class="mb-3 form-check">
              <input type="checkbox" class="form-check-input" id="installment" name="installment">
              <label class="form-check-label" for="installment">Tính trả góp</label>
            </div>
            <div class="mb-3 form-check">
              <input type="checkbox" class="form-check-input" id="total_price" name="total_price">
              <label class="form-check-label" for="total_price">Tính lăn bánh</label>
            </div>
          </div>
          <button type="submit" class="btn btn-primary">
            <i class="fa fa-angle-double-right bounce-alpha" aria-hidden="true"></i>
            <span>Nhận Báo giá ngay</span>
          </button>
        </form>
      </div>
    </div>
  </div>
</div>